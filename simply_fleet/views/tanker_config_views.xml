<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tanker Configuration Form View -->
    <record id="view_simply_fleet_tanker_config_form" model="ir.ui.view">
        <field name="name">simply.fleet.tanker.config.form</field>
        <field name="model">simply.fleet.tanker.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_recalculate_capacity" 
                            string="Recalculate Statistics" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_low_fuel_alert" 
                            string="Send Low Fuel Alert" 
                            type="object" 
                            class="btn-warning"
                            invisible="fuel_level_status != 'low'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Diesel Tanker Configuration</h1>
                    </div>
                    
                    <field name="fuel_level_status" invisible="1"/>
                    <div class="alert alert-success" role="alert" invisible="fuel_level_status != 'high'">
                        <strong>Fuel Level: HIGH</strong> - The diesel tanker has a good amount of fuel.
                    </div>
                    <div class="alert alert-warning" role="alert" invisible="fuel_level_status != 'medium'">
                        <strong>Fuel Level: MEDIUM</strong> - The diesel tanker is at a medium level.
                    </div>
                    <div class="alert alert-danger" role="alert" invisible="fuel_level_status != 'low'">
                        <strong>Fuel Level: LOW</strong> - The diesel tanker is running low on fuel. Consider refilling soon.
                    </div>
                    
                    <group>
                        <group string="Configuration">
                            <field name="tanker_vehicle_id" options="{'no_create': True}"/>
                            <field name="total_capacity"/>
                            <field name="warning_level"/>
                            <field name="critical_level"/>
                        </group>
                        <group string="Current Status">
                            <field name="remaining_capacity" widget="float"/>
                            <field name="days_remaining"/>
                            <field name="last_refill_date"/>
                            <field name="last_refill_amount"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page name="consumption" string="Consumption Statistics">
                            <group>
                                <field name="last_week_consumption"/>
                                <field name="last_month_consumption"/>
                                <field name="avg_daily_consumption"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tanker Configuration Action -->
    <record id="action_simply_fleet_tanker_config" model="ir.actions.act_window">
        <field name="name">Diesel Tanker Configuration</field>
        <field name="res_model">simply.fleet.tanker.config</field>
        <field name="view_mode">form</field>
        <field name="target">main</field>
    </record>
    
    <!-- Menu Item for Tanker Configuration -->
    <menuitem id="menu_simply_fleet_tanker_config"
              name="Diesel Tanker"
              parent="menu_simply_fleet_config"
              sequence="40"
              action="action_simply_fleet_tanker_config"/>
</odoo>
