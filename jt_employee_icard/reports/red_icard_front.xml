<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="red_icard_template">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                        <div style="width:670px;height:998px;background-image:url('jt_employee_icard/static/src/img/red_id_front.png')">
                            <div style="text-align:right;color:#FF4500;">
                                <p><span style="font-size:30px;font-weight:bold;" t-field="res_company.name"/></p>
                            </div>
                            <div style="clear:both;"/>
                            <div style="height:40%;">
                                <div style="margin-left:212px;margin-top:45px;margin-right:8px;">
                                    <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="height:250px;width:250px;margin-top:5px;border-radius:150px;"/>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:35px;margin-top:50px;color:black;font-weight:bold;text-transform:uppercase;"><span t-field="o.name"/></p>
                                    <p style="text-transform:uppercase;font-size:30px;margin-top:-25px;color:#FFA500;"><span t-field="o.job_id"/></p>
                                </div>
                            </div>
                           <div style="height:50%;align:center;">
                            <center>
                            <table clas="table table-borderless border border-right-0 border-left-0"  style="align:center;width:50%;height:auto;margin-left:15%;font-size:25px;">
                                <tr>
                                    <td style="font-weight:bold;">Emp. Id:</td>
                                    <td><span t-field="o.emp_id" /></td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;">Blood:</td>
                                    <td><span t-field="o.blood"/></td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;">Birthday:</td>
                                    <td><span t-field="o.birthday"/></td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;">Email:</td>
                                    <td><span t-field="o.work_email"/></td>
                                </tr>
                                
                               
                            </table>
                        </center>
                            </div>
                        </div> 
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="paperformat_red_employee_icard" model="report.paperformat">
            <field name="name">Employee Red Front Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

