     <record id="employee_classic_front_icard_report" model="ir.actions.report">
        <field name="name">Square Id-Card Reprt FRONT</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">jt_employee_icard.square_classic_icard</field>
        <field name="report_file">jt_employee_icard.square_classic_icard</field>
        <field name="binding_model_id" ref="model_hr_employee"/>
        <field name="print_report_name">object.name</field>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="jt_employee_icard.square_front_idcard"/>
    </record>
    </data>
</odoo>
