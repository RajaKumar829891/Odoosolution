<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="multi_icard_report">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;padding:10px;">
                        <div style="width:670px;height:990px;background-image:url('jt_employee_icard/static/src/img/id_multi_front.png')">
                            
                            <div>
                                <center>
                                    <div style="height:20%;width:100%;align:center;">
                                       <p><span style="font-size:40px;color:black;font-weight:bold;" t-field="res_company.name"/></p>
                                    </div>
                                </center>
                            </div>
                            <div style="clear:both;"/>
                            <div style="height:30%;">
                                <div style="margin-left:0px;margin-top:0px;">
                                    <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="border-radius:150px;height:290px;width:300px;margin-left:178px;margin-top:118px"/>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:35px;margin-top:65px;color:black;font-weight:bold;text-transform:uppercase;"><span t-field="o.name"/></p>
                                    <p style="text-transform:uppercase;font-size:30px;margin-top:-25px;color:#FFC300;"><span t-field="o.job_id"/></p>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:30px;color:black;font-weight:bold;">ID NUMBER : <span t-field="o.emp_id"/></p>
                                    <p style="font-size:28px;">PHONE :&#160;&#160;&#160;<span t-field="o.work_phone"/></p>
                                    <p style="font-size:28px;margin-top:-10px;">DOB :&#160;&#160;&#160;<span t-field="o.birthday"/></p>
                                    <img alt="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 120)" style="text-align:center;height:80px;width:450px;border:1px solid;padding:5px;margin-top:0px;"/>
                                    <p style="margin-top:0px;"><span style="font-size:20px;font-weight:bold;" t-field="res_company.website"/></p>
                                </div>
                            </div> 
                        </div> 
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="multi_front_idcard" model="report.paperformat">
            <field name="name">Employee Multi Front Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

