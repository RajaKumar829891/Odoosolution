<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="purple_icard_back_report">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                        <div style="width:670px;height:998px;background-image:url('jt_employee_icard/static/src/img/id_purple_backend.png')">
                            <div style="height:30%;text-align:center;margin-top:200px;">
                                <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:80px;height:80px;"/>
                                <p style="padding-left:26px;"><span style="font-size:36px;color:black;" t-field="res_company.name"/></p>
                            </div>
                            
                            <!-- body -->
                            <div style="height:50%;text-align:center;margin-top:-60px;">
                                <center>
                                    
                                    <table style="font-size:28px;margin-top:35px;">
                                     

                                         <tr>
                                            <td>Phone:</td>
                                            <td><span t-field="o.work_phone"/></td>
                                        </tr>
                                        <tr>
                                            <td valign="top">Resident Address: </td>
                                            <td>
                                                <span t-field="o.address_home_id.street"/><br/>
                                                <span t-field="o.address_home_id.street2"/><br/>
                                                <span t-field="o.address_home_id.city"/><br/>
                                                <span t-field="o.address_home_id.state_id"/>  
                                                <span t-field="o.address_home_id.zip"/><br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td valign="top">Office Address: </td>
                                            <td>
                                                <span t-field="res_company.street"/><br/>
                                                <span t-field="res_company.street2"/><br/>
                                                <span t-field="res_company.city"/><br/>
                                                <span t-field="res_company.state_id"/>  <span t-field="res_company.zip"/><br/>
                                                <span t-field="res_company.country_id"/>
                                            </td>
                                        </tr>
                                        
                                    </table>
                                </center>
                                </div>
                                <div style="text-align:center;font-size:30px;margin-top:115px;color:black;">
                                    <span t-field="res_company.email"/>
                                </div>
                            </div>
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="purple_back_idcard" model="report.paperformat">
            <field name="name">Employee Green Back Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

