        <record id="purple_front_icard_report" model="ir.actions.report">
            <field name="name">Purple Id-Card Report FRONT</field>
            <field name="model">hr.employee</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_employee_icard.purple_icard_report</field>
            <field name="report_file">jt_employee_icard.purple_icard_report</field>
            <field name="binding_model_id" ref="model_hr_employee"/>
            <field name="print_report_name">object.name</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="jt_employee_icard.purple_front_idcard"/>
        </record>


    </data>
</odoo>