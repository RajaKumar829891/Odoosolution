<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="blue_icard_template">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                        <div style="width:670px;height:998px;background-image:url('jt_employee_icard/static/src/img/blue.png')">
                            
                            <div style="height:10%;color:black;">
                                <div style="height:10%;width:100%;align:center;margin-left:220px;">
                                   <p><span style="font-size:50px;color:white;" t-field="res_company.name"/></p>
                                </div>
                            </div>
                            <div style="clear:both;"/>
                            <div style="height:40%;">
                                <div style="margin-left:210px;margin-top:46px;">
                                    <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="height:254px;width:254px;margin-top:5px;border-radius:150px;"/>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:35px;margin-top:50px;color:black;font-weight:bold;text-transform:uppercase;"><span t-field="o.name"/></p>
                                    <p style="text-transform:uppercase;font-size:30px;margin-top:-25px;color:#FFA500;"><span t-field="o.job_id"/></p>
                                </div>
                            </div>
                            <div style="height:50;">
                                <center>
                                    <p style="font-size:30px;color:black;font-weight:bold;">ID NUMBER:</p>
                                    <p style="font-size:25px;"><span t-field="o.emp_id"/></p>
                                    <p style="font-size:25px;"><strong>Blood:</strong>&#160;&#160;&#160;<span t-field="o.blood"/></p>
                                    
                                    <p style="font-size:25px;"><strong>Birthday:</strong>&#160;&#160;&#160;<span t-field="o.birthday"/></p>
                                    <p style="font-size:25px;"><strong>Email:</strong>&#160;&#160;&#160;<span t-field="o.work_email"/></p>
                                    
                                    <img alt="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 120)" style="text-align:center;height:80px;width:450px;border:1px solid;padding:8px;"/>
                                    <p style="margin-top:24px;"><span style="font-size:30px;font-weight:bold;color:#10354F;" t-field="res_company.website"/></p>

                                </center>
                            </div>
                            
                        </div> 
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="paperformat_blue_employee_icard" model="report.paperformat">
            <field name="name">Employee Blue Front Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="employee_blue_front_icard_report" model="ir.actions.report">
            <field name="name">Blue I-card Report FRONT</field>
            <field name="model">hr.employee</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_employee_icard.blue_icard_template</field>
            <field name="report_file">jt_employee_icard.blue_icard_template</field>
            <field name="binding_model_id" ref="model_hr_employee"/>
            <field name="print_report_name">object.name</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="jt_employee_icard.paperformat_blue_employee_icard"/>
        </record>


    </data>
</odoo>
