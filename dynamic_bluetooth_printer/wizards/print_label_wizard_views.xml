<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Print Label Wizard Form View -->
    <record id="view_print_label_wizard_form" model="ir.ui.view">
        <field name="name">print.label.wizard.form</field>
        <field name="model">print.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Product Labels">
                <sheet>
                    <group>
                        <field name="printer_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="quantity"/>
                        <field name="include_price"/>
                        <field name="include_barcode"/>
                        <field name="scan_before_print"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_scan_printer" string="Scan for Printers" type="object" 
                            class="btn-secondary" invisible="not scan_before_print"/>
                    <button name="action_print_labels" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Print Label Wizard Action -->
    <record id="action_print_label_wizard" model="ir.actions.act_window">
        <field name="name">Print Product Labels</field>
        <field name="res_model">print.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">form,list</field>
    </record>
    
    <!-- Bluetooth Printer Scan Wizard -->
    <record id="view_bluetooth_printer_scan_wizard_form" model="ir.ui.view">
        <field name="name">bluetooth.printer.scan.wizard.form</field>
        <field name="model">bluetooth.printer.scan.wizard</field>
        <field name="arch" type="xml">
            <form string="Discovered Bluetooth Devices">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <p><strong>Found <field name="device_count"/> Bluetooth devices.</strong></p>
                        <p>Select the devices you want to add as printers. Make sure your SHREYANS printer is powered on and in discoverable mode.</p>
                    </div>
                    <field name="device_ids">
                        <tree editable="bottom">
                            <field name="selected" widget="boolean_toggle"/>
                            <field name="name"/>
                            <field name="mac_address"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_rescan" string="Rescan" type="object" class="btn-secondary"/>
                    <button name="action_add_selected" string="Add Selected Printers" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
