<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Print Label button to Product form view -->
    <record id="product_template_form_view_inherit_bluetooth_printer" model="ir.ui.view">
        <field name="name">product.template.form.inherit.bluetooth.printer</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="%(dynamic_bluetooth_printer.action_print_label_wizard)d" type="action"
                        string="Print Label" icon="fa-print" context="{'default_scan_before_print': True}"/>
            </xpath>
        </field>
    </record>
    
    <!-- Add Print Labels action to product list view -->
    <record id="action_print_product_labels" model="ir.actions.act_window">
        <field name="name">Print Product Labels</field>
        <field name="res_model">print.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
