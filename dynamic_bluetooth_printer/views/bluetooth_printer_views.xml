<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bluetooth Printer Form View -->
    <record id="view_bluetooth_printer_form" model="ir.ui.view">
        <field name="name">bluetooth.printer.form</field>
        <field name="model">bluetooth.printer</field>
        <field name="arch" type="xml">
            <form string="Bluetooth Printer">
                <header>
                    <button name="action_scan_printers" string="Scan for Printers" type="object" class="btn-primary"/>
                    <button name="action_connect" string="Connect" type="object" class="btn-primary" invisible="is_connected"/>
                    <button name="action_disconnect" string="Disconnect" type="object" invisible="not is_connected"/>
                    <button name="print_test_label" string="Print Test Label" type="object" invisible="not is_connected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Printer Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="mac_address" required="0"/>
                            <field name="width_mm"/>
                            <field name="is_default"/>
                        </group>
                        <group>
                            <field name="bridge_url"/>
                            <field name="is_connected"/>
                            <field name="last_connected"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Bluetooth Printer Tree View -->
    <record id="view_bluetooth_printer_tree" model="ir.ui.view">
        <field name="name">bluetooth.printer.tree</field>
        <field name="model">bluetooth.printer</field>
        <field name="arch" type="xml">
            <tree string="Bluetooth Printers">
                <field name="name"/>
                <field name="mac_address"/>
                <field name="is_connected"/>
                <field name="is_default"/>
                <field name="last_connected"/>
            </tree>
        </field>
    </record>
    
    <!-- Bluetooth Printer Action -->
    <record id="action_bluetooth_printer" model="ir.actions.act_window">
        <field name="name">Bluetooth Printers</field>
        <field name="res_model">bluetooth.printer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new Bluetooth printer
            </p>
            <p>
                Configure your SHREYANS 58mm or other Bluetooth thermal printers here.
            </p>
        </field>
    </record>
    
    <!-- Add scan button to the list view action -->
    <record id="action_scan_printers_from_list" model="ir.actions.server">
        <field name="name">Scan for Printers</field>
        <field name="model_id" ref="model_bluetooth_printer"/>
        <field name="binding_model_id" ref="model_bluetooth_printer"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = model.open_discovery_wizard()
        </field>
    </record>
    
    <!-- Menu Entry -->
    <menuitem id="menu_bluetooth_printer" name="Bluetooth Printers" 
              parent="stock.menu_stock_config_settings" action="action_bluetooth_printer" sequence="100"/>
</odoo>
