<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Template Form View -->
    <record id="view_whatsapp_template_form" model="ir.ui.view">
        <field name="name">whatsapp.template.form</field>
        <field name="model">whatsapp.template</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Message Template">
                <header>
                    <button name="sync_from_meta" string="Sync from Meta" type="object" class="oe_highlight" 
                            help="Sync templates from Meta WhatsApp Business API"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g., Welcome Message"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="template_name"/>
                            <field name="language_code"/>
                            <field name="component_type"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="meta_template_id"/>
                            <field name="meta_template_status" widget="badge" 
                                decoration-success="meta_template_status == 'approved'" 
                                decoration-warning="meta_template_status == 'pending'" 
                                decoration-danger="meta_template_status == 'rejected'" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Template Content">
                            <group>
                                <field name="template_text" placeholder="Hello {{1}}, your appointment is scheduled for {{2}}." widget="text"/>
                                <field name="placeholder_description" placeholder="{{1}}: Customer Name, {{2}}: Appointment Date and Time" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WhatsApp Template Tree View -->
    <record id="view_whatsapp_template_tree" model="ir.ui.view">
        <field name="name">whatsapp.template.tree</field>
        <field name="model">whatsapp.template</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp Message Templates" decoration-success="meta_template_status == 'approved'" decoration-warning="meta_template_status == 'pending'" decoration-danger="meta_template_status == 'rejected'" decoration-muted="is_active == False">
                <field name="name"/>
                <field name="template_name"/>
                <field name="language_code"/>
                <field name="component_type"/>
                <field name="is_active"/>
                <field name="meta_template_status"/>
            </tree>
        </field>
    </record>

    <!-- WhatsApp Template Action -->
    <record id="action_whatsapp_template" model="ir.actions.act_window">
        <field name="name">WhatsApp Templates</field>
        <field name="res_model">whatsapp.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first WhatsApp template
            </p>
            <p>
                Message templates must be approved by Meta before they can be used.
                You can sync approved templates from Meta or create new ones here.
            </p>
        </field>
    </record>
</odoo>
