<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Message Form View -->
    <record id="view_whatsapp_message_form" model="ir.ui.view">
        <field name="name">whatsapp.message.form</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="send_message" string="Send Message" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,sent,delivered,read"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="subject" class="oe_edit_only"/>
                        <h1><field name="subject" placeholder="e.g., Welcome Message"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="recipient_number"/>
                            <field name="direction"/>
                            <field name="partner_id"/>
                            <field name="template_id" invisible="direction == 'incoming'"/>
                        </group>
                        <group>
                            <field name="sent_datetime" readonly="1" invisible="sent_datetime == False"/>
                            <field name="delivered_datetime" readonly="1" invisible="delivered_datetime == False"/>
                            <field name="read_datetime" readonly="1" invisible="read_datetime == False"/>
                            <field name="meta_message_id" readonly="1" invisible="meta_message_id == False"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Message Content">
                            <group>
                                <field name="message_body" widget="text" placeholder="Enter your message here..."/>
                                <field name="template_parameters" widget="text" placeholder='["param1", "param2"]'
                                       invisible="template_id == False"/>
                            </group>
                        </page>
                        <page string="Error Information" invisible="state != 'failed'">
                            <group>
                                <field name="error_message" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WhatsApp Message Tree View -->
    <record id="view_whatsapp_message_tree" model="ir.ui.view">
        <field name="name">whatsapp.message.tree</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'read'" decoration-info="state == 'sent'" decoration-warning="state == 'delivered'" decoration-danger="state == 'failed'">
                <field name="create_date" string="Date"/>
                <field name="subject"/>
                <field name="recipient_number"/>
                <field name="direction"/>
                <field name="partner_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- WhatsApp Message Search View -->
    <record id="view_whatsapp_message_search" model="ir.ui.view">
        <field name="name">whatsapp.message.search</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <search string="Search WhatsApp Messages">
                <field name="subject"/>
                <field name="recipient_number"/>
                <field name="message_body"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Outgoing" name="outgoing" domain="[('direction', '=', 'outgoing')]"/>
                <filter string="Incoming" name="incoming" domain="[('direction', '=', 'incoming')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Read" name="read" domain="[('state', '=', 'read')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Direction" name="group_by_direction" context="{'group_by': 'direction'}"/>
                    <filter string="Partner" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- WhatsApp Message Action -->
    <record id="action_whatsapp_message" model="ir.actions.act_window">
        <field name="name">WhatsApp Messages</field>
        <field name="res_model">whatsapp.message</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_outgoing': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Send your first WhatsApp message
            </p>
            <p>
                Create a new message to send to your contacts via WhatsApp.
            </p>
        </field>
    </record>
</odoo>
