<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- JS Assets -->
        <record id="my_barcode_scanner_js" model="ir.asset">
            <field name="name">My Barcode Scanner JS</field>
            <field name="bundle">web.assets_backend</field>
            <field name="directive">append</field>
            <field name="path">/my_barcode_scanner/static/src/js/barcode_scanner.js</field>
        </record>
        
        <record id="my_barcode_widget_js" model="ir.asset">
            <field name="name">My Barcode Widget JS</field>
            <field name="bundle">web.assets_backend</field>
            <field name="directive">append</field>
            <field name="path">/my_barcode_scanner/static/src/js/barcode_widget.js</field>
        </record>
        
        <record id="barcode_handler_nextline_js" model="ir.asset">
            <field name="name">Barcode Handler Nextline JS</field>
