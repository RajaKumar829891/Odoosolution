<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_product_label_custom">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="product">
                        <div class="text-center" style="margin-top: -10px;">
                            <!-- Product Name with better visibility -->
                            <div style="margin-bottom: 10px;">
                                <h1 style="font-size: 28pt; font-weight: bold; text-transform: none; display: inline-block; margin: 0 auto; padding-top: 30px;"><t t-esc="product.name"/></h1>
                            </div>
                            
                            <!-- Barcode container -->
                            <div class="border border-dark mx-auto" style="width: 80%; padding: 10px; margin: 10px auto;">
                                <img t-if="product.barcode" class="img-fluid" t-att-src="'/report/barcode/Code128/%s' % (product.barcode)" style="margin: 0;"/>
                                <div style="margin-top: 0;">
                                    <span t-esc="product.barcode"/>
                                </div>
                            </div>
                            
                            <!-- Default Location on one line -->
                            <div style="margin-top: 5px; text-align: center;">
                                <strong>Default Location: </strong>
                                <t t-if="product.product_variant_ids and product.product_variant_ids[0].property_stock_inventory">
                                    <span t-field="product.product_variant_ids[0].property_stock_inventory.complete_name"/>
                                </t>
                                <t t-else="">
                                    <span>Inventory</span>
                                </t>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
