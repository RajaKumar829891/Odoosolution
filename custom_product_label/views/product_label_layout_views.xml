<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add the 50*25mm option to the product label printing wizard -->
    <record id="product_label_layout_form_inherit" model="ir.ui.view">
        <field name="name">product.label.layout.form.inherit</field>
        <field name="model">product.label.layout</field>
        <field name="inherit_id" ref="product.product_label_layout_form"/>
        <field name="arch" type="xml">
            <field name="print_format" position="inside">
                <radio value="50_25">50*25mm</radio>
            </field>
        </field>
    </record>
</odoo>
