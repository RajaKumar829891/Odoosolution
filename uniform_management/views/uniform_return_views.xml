<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Uniform Return Tree View -->
    <record id="view_uniform_return_tree" model="ir.ui.view">
        <field name="name">uniform.return.tree</field>
        <field name="model">uniform.return</field>
        <field name="arch" type="xml">
            <tree string="Uniform Returns">
                <field name="name"/>
                <field name="assignment_id"/>
                <field name="employee_id"/>
                <field name="item_id"/>
                <field name="return_date"/>
                <field name="quantity"/>
                <field name="condition"/>
                <field name="reusable"/>
            </tree>
        </field>
    </record>
    
    <!-- Uniform Return Form View -->
    <record id="view_uniform_return_form" model="ir.ui.view">
        <field name="name">uniform.return.form</field>
        <field name="model">uniform.return</field>
        <field name="arch" type="xml">
            <form string="Uniform Return">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="assignment_id"/>
                            <field name="employee_id"/>
                            <field name="item_id"/>
                        </group>
                        <group>
                            <field name="return_date"/>
                            <field name="quantity"/>
                            <field name="condition"/>
                            <field name="reusable"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Add notes about the condition or other details..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Uniform Return Search View -->
    <record id="view_uniform_return_search" model="ir.ui.view">
        <field name="name">uniform.return.search</field>
        <field name="model">uniform.return</field>
        <field name="arch" type="xml">
            <search string="Search Uniform Returns">
                <field name="name"/>
                <field name="assignment_id"/>
                <field name="employee_id"/>
                <field name="item_id"/>
                <separator/>
                <filter string="Good Condition" name="good_condition" domain="[('condition', '=', 'good')]"/>
                <filter string="Reusable" name="reusable" domain="[('reusable', '=', True)]"/>
                <filter string="Non-Reusable" name="non_reusable" domain="[('reusable', '=', False)]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('return_date','&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),('return_date','&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="groupby_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Item" name="groupby_item" context="{'group_by': 'item_id'}"/>
                    <filter string="Condition" name="groupby_condition" context="{'group_by': 'condition'}"/>
                    <filter string="Return Month" name="groupby_month" context="{'group_by': 'return_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Uniform Return Action -->
    <record id="action_uniform_return" model="ir.actions.act_window">
        <field name="name">Uniform Returns</field>
        <field name="res_model">uniform.return</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_uniform_return_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No uniform returns yet
            </p>
            <p>
                Create a new uniform return record.
            </p>
        </field>
    </record>
    
    <!-- Uniform Return Wizard Form View -->
    <record id="view_uniform_return_wizard_form" model="ir.ui.view">
        <field name="name">uniform.return.wizard.form</field>
        <field name="model">uniform.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Return Uniform">
                <group>
                    <group>
                        <field name="assignment_id" readonly="1"/>
                        <field name="return_date"/>
                    </group>
                    <group>
                        <field name="max_quantity" invisible="1"/>
                        <field name="quantity"/>
                        <field name="condition"/>
                    </group>
                </group>
                <field name="notes" placeholder="Add notes about the condition..."/>
                <footer>
                    <button name="action_return" string="Return" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
