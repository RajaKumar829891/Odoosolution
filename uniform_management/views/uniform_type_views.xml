<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Uniform Type Tree View -->
    <record id="view_uniform_type_tree" model="ir.ui.view">
        <field name="name">uniform.type.tree</field>
        <field name="model">uniform.type</field>
        <field name="arch" type="xml">
            <tree string="Uniform Types">
                <field name="name"/>
                <field name="code"/>
                <field name="item_count"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Uniform Type Form View -->
    <record id="view_uniform_type_form" model="ir.ui.view">
        <field name="name">uniform.type.form</field>
        <field name="model">uniform.type</field>
        <field name="arch" type="xml">
            <form string="Uniform Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_uniform_item)d" type="action" 
                                class="oe_stat_button" icon="fa-list"
                                context="{'search_default_type_id': active_id}">
                            <field name="item_count" string="Items" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Type Name"/></h1>
                        <label for="code" class="oe_edit_only"/>
                        <h2><field name="code" placeholder="Code"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe the uniform type..."/>
                        </page>
                        <page string="Applicable Departments">
                            <field name="department_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Job Positions">
                            <field name="job_position_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Items">
                            <field name="item_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category"/>
                                    <field name="qty_available"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Uniform Type Search View -->
    <record id="view_uniform_type_search" model="ir.ui.view">
        <field name="name">uniform.type.search</field>
        <field name="model">uniform.type</field>
        <field name="arch" type="xml">
            <search string="Search Uniform Types">
                <field name="name"/>
                <field name="code"/>
                <field name="department_ids"/>
                <field name="job_position_ids"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    
    <!-- Uniform Type Action -->
    <record id="action_uniform_type" model="ir.actions.act_window">
        <field name="name">Uniform Types</field>
        <field name="res_model">uniform.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_uniform_type_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new uniform type
            </p>
            <p>
                Define different types of uniforms in your organization.
            </p>
        </field>
    </record>
</odoo>
