<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Uniform Item Tree View -->
    <record id="view_uniform_item_tree" model="ir.ui.view">
        <field name="name">uniform.item.tree</field>
        <field name="model">uniform.item</field>
        <field name="arch" type="xml">
            <tree string="Uniform Items">
                <field name="name"/>
                <field name="code"/>
                <field name="type_id"/>
                <field name="category"/>
                <field name="size_type"/>
                <field name="qty_available"/>
                <field name="min_qty"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Uniform Item Form View -->
    <record id="view_uniform_item_form" model="ir.ui.view">
        <field name="name">uniform.item.form</field>
        <field name="model">uniform.item</field>
        <field name="arch" type="xml">
            <form string="Uniform Item">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Uniform Item Name"/></h1>
                        <label for="code" class="oe_edit_only"/>
                        <h2><field name="code" placeholder="Code"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="type_id"/>
                            <field name="category"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="size_type"/>
                            <field name="replacement_period"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe the uniform item..."/>
                        </page>
                        <page string="Available Sizes">
                            <field name="available_sizes">
                                <tree>
                                    <field name="name"/>
                                    <field name="size_type"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Stock Information">
                            <group>
                                <field name="qty_available"/>
                                <field name="min_qty"/>
                            </group>
                        </page>
                        <page string="Assignments">
                            <field name="assignment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="size_id"/>
                                    <field name="assignment_date"/>
                                    <field name="quantity"/>
                                    <field name="returned_qty"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Uniform Item Search View -->
    <record id="view_uniform_item_search" model="ir.ui.view">
        <field name="name">uniform.item.search</field>
        <field name="model">uniform.item</field>
        <field name="arch" type="xml">
            <search string="Search Uniform Items">
                <field name="name"/>
                <field name="code"/>
                <field name="type_id"/>
                <field name="category"/>
                <separator/>
                <filter string="Low Stock" name="low_stock" domain="[('qty_available', '&lt;=', 'min_qty')]"/>
                <filter string="Out of Stock" name="out_of_stock" domain="[('qty_available', '=', 0)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="groupby_type" context="{'group_by': 'type_id'}"/>
                    <filter string="Category" name="groupby_category" context="{'group_by': 'category'}"/>
                    <filter string="Size Type" name="groupby_size_type" context="{'group_by': 'size_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Uniform Item Action -->
    <record id="action_uniform_item" model="ir.actions.act_window">
        <field name="name">Uniform Items</field>
        <field name="res_model">uniform.item</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_uniform_item_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new uniform item
            </p>
            <p>
                Define uniform items that can be assigned to employees.
            </p>
        </field>
    </record>
    
    <!-- Dashboard Action -->
    <record id="action_uniform_dashboard" model="ir.actions.act_window">
        <field name="name">Uniform Dashboard</field>
        <field name="res_model">uniform.item</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_low_stock': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No uniform items found
            </p>
            <p>
                Create your first uniform item to start managing employee uniforms
            </p>
        </field>
    </record>
</odoo>
