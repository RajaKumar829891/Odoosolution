<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Uniform Size Tree View -->
    <record id="view_uniform_size_tree" model="ir.ui.view">
        <field name="name">uniform.size.tree</field>
        <field name="model">uniform.size</field>
        <field name="arch" type="xml">
            <tree string="Uniform Sizes">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="size_type"/>
                <field name="description"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Uniform Size Form View -->
    <record id="view_uniform_size_form" model="ir.ui.view">
        <field name="name">uniform.size.form</field>
        <field name="model">uniform.size</field>
        <field name="arch" type="xml">
            <form string="Uniform Size">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Size Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="size_type"/>
                            <field name="description"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="chest_measurement" attrs="{'invisible': [('size_type', '=', 'shoe')]}"/>
                            <field name="waist_measurement" attrs="{'invisible': [('size_type', '=', 'shoe')]}"/>
                            <field name="hip_measurement" attrs="{'invisible': [('size_type', '=', 'shoe')]}"/>
                            <field name="length_measurement" attrs="{'invisible': [('size_type', '=', 'shoe')]}"/>
                            <field name="foot_length" attrs="{'invisible': [('size_type', '!=', 'shoe')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Size Equivalents" attrs="{'invisible': [('size_type', '=', 'numeric')]}">
                            <group>
                                <group>
                                    <field name="equivalent_international"/>
                                    <field name="equivalent_us"/>
                                </group>
                                <group>
                                    <field name="equivalent_eu"/>
                                    <field name="equivalent_uk"/>
                                </group>
                            </group>
                        </page>
                        <page string="Associated Items">
                            <field name="item_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category"/>
                                    <field name="type_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Uniform Size Search View -->
    <record id="view_uniform_size_search" model="ir.ui.view">
        <field name="name">uniform.size.search</field>
        <field name="model">uniform.size</field>
        <field name="arch" type="xml">
            <search string="Search Uniform Sizes">
                <field name="name"/>
                <field name="description"/>
                <separator/>
                <filter string="Letter Size" name="letter_size" domain="[('size_type', '=', 'letter')]"/>
                <filter string="Numeric Size" name="numeric_size" domain="[('size_type', '=', 'numeric')]"/>
                <filter string="Shoe Size" name="shoe_size" domain="[('size_type', '=', 'shoe')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Size Type" name="groupby_size_type" context="{'group_by': 'size_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Uniform Size Action -->
    <record id="action_uniform_size" model="ir.actions.act_window">
        <field name="name">Size Chart</field>
        <field name="res_model">uniform.size</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_uniform_size_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define size chart
            </p>
            <p>
                Create different sizes for uniform items.
            </p>
        </field>
    </record>
</odoo>
