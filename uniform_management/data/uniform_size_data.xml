        <!-- Link sizes to items -->
        <!-- T-shirts (letter sizes) -->
        <function model="uniform.item" name="write">
            <value model="uniform.item" eval="[ref('uniform_item_office_tshirt'), ref('uniform_item_factory_tshirt')]"/>
            <value eval="{'available_sizes': [(6, 0, [ref('uniform_size_xs'), ref('uniform_size_s'), ref('uniform_size_m'), ref('uniform_size_l'), ref('uniform_size_xl'), ref('uniform_size_xxl')])]}"/>
        </function>
        
        <!-- Pants (numeric sizes) -->
        <function model="uniform.item" name="write">
            <value model="uniform.item" eval="[ref('uniform_item_office_pants'), ref('uniform_item_factory_pants')]"/>
            <value eval="{'available_sizes': [(6, 0, [ref('uniform_size_28'), ref('uniform_size_30'), ref('uniform_size_32'), ref('uniform_size_34'), ref('uniform_size_36'), ref('uniform_size_38'), ref('uniform_size_40'), ref('uniform_size_42')])]}"/>
