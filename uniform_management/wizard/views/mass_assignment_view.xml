<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mass Uniform Assignment Wizard Form -->
    <record id="view_mass_uniform_assignment_form" model="ir.ui.view">
        <field name="name">mass.uniform.assignment.form</field>
        <field name="model">mass.uniform.assignment</field>
        <field name="arch" type="xml">
            <form string="Mass Uniform Assignment">
                <sheet>
                    <group>
                        <group string="Selection Criteria">
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <span invisible="department_id or job_id">
                                Or select employees individually:
                            </span>
                            <field name="employee_ids" 
                                   invisible="department_id or job_id"
                                   options="{'no_create': True}"/>
                            <field name="employee_count"/>
                        </group>
                        <group string="Uniform Details">
                            <field name="item_id" domain="[('qty_available', '&gt;', 0)]"
                                   options="{'no_create': True}"/>
                            <field name="assignment_date"/>
                            <field name="quantity"/>
                            <field name="auto_size"/>
                            <field name="size_id" 
                                   invisible="auto_size"
                                   required="not auto_size"
                                   domain="[('id', 'in', item_id.available_sizes and item_id.available_sizes.ids or [])]"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employee Preview">
                            <field name="preview_line_ids">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="employee_id" readonly="1"/>
                                    <field name="department_id" readonly="1"/>
                                    <field name="job_id" readonly="1"/>
                                    <field name="size_id" required="1" 
                                           readonly="has_size"
                                           options="{'no_create': True}"/>
                                    <field name="quantity"/>
                                    <field name="has_size" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Add notes here..."/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_assign" string="Assign Uniforms" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Mass Uniform Assignment Action -->
    <record id="action_mass_uniform_assignment" model="ir.actions.act_window">
        <field name="name">Mass Uniform Assignment</field>
        <field name="res_model">mass.uniform.assignment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
