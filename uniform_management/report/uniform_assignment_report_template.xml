<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Uniform Assignment Report -->
    <record id="view_uniform_assignment_report_tree" model="ir.ui.view">
        <field name="name">uniform.assignment.report.tree</field>
        <field name="model">uniform.assignment.report</field>
        <field name="arch" type="xml">
            <tree string="Uniform Assignment Analysis">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="item_id"/>
                <field name="category"/>
                <field name="size_id"/>
                <field name="assignment_date"/>
                <field name="quantity"/>
                <field name="returned_qty"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="view_uniform_assignment_report_search" model="ir.ui.view">
        <field name="name">uniform.assignment.report.search</field>
        <field name="model">uniform.assignment.report</field>
        <field name="arch" type="xml">
            <search string="Uniform Assignment Analysis">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="item_id"/>
                <field name="category"/>
                <field name="assignment_date"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('assignment_date','&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),('assignment_date','&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Year" name="this_year" domain="[('assignment_date','&gt;=', (context_today() + relativedelta(month=1, day=1)).strftime('%Y-%m-%d')),('assignment_date','&lt;=', (context_today() + relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('state','in',['assigned','partially_returned'])]"/>
                <filter string="Returned" name="returned" domain="[('state','=','returned')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Department" name="department" context="{'group_by':'department_id'}"/>
                    <filter string="Job Position" name="job" context="{'group_by':'job_id'}"/>
                    <filter string="Item" name="item" context="{'group_by':'item_id'}"/>
                    <filter string="Category" name="category" context="{'group_by':'category'}"/>
                    <filter string="Type" name="type" context="{'group_by':'type_id'}"/>
                    <filter string="State" name="state" context="{'group_by':'state'}"/>
                    <filter string="Assignment Month" name="assignment_month" context="{'group_by':'assignment_date:month'}"/>
                    <filter string="Assignment Year" name="assignment_year" context="{'group_by':'assignment_date:year'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="view_uniform_assignment_report_pivot" model="ir.ui.view">
        <field name="name">uniform.assignment.report.pivot</field>
        <field name="model">uniform.assignment.report</field>
        <field name="arch" type="xml">
            <pivot string="Uniform Assignment Analysis" display_quantity="true">
                <field name="department_id" type="row"/>
                <field name="category" type="row"/>
                <field name="assignment_date" type="col" interval="month"/>
                <field name="quantity" type="measure"/>
                <field name="returned_qty" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <record id="view_uniform_assignment_report_graph" model="ir.ui.view">
        <field name="name">uniform.assignment.report.graph</field>
        <field name="model">uniform.assignment.report</field>
        <field name="arch" type="xml">
            <graph string="Uniform Assignment Analysis" type="bar">
                <field name="category"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>
    
    <record id="action_uniform_assignment_report" model="ir.actions.act_window">
        <field name="name">Uniform Assignment Analysis</field>
        <field name="res_model">uniform.assignment.report</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="search_view_id" ref="view_uniform_assignment_report_search"/>
        <field name="context">{'search_default_this_year': 1, 'search_default_active': 1}</field>
        <field name="help">This report performs analysis on your uniform assignments.</field>
    </record>
</odoo>
